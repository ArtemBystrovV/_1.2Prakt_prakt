<Page x:Class="_1._2Prakt.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1._2Prakt"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid>
            <DataGrid x:Name="PostavshikDataGrid" AutoGenerateColumns="False" Margin="0,170,0,151">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID_POSTAVSHIK}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding POSTAVSHIKName}"/>
                    <DataGridTextColumn Header="Contactname" Binding="{Binding ContactName}"/>
                    <DataGridTextColumn Header="Adres" Binding="{Binding Adres}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Exit" HorizontalAlignment="Left" Margin="456,260,0,0" VerticalAlignment="Top" Height="39" Width="102" Click="ExitButton_Click" RenderTransformOrigin="0.513,0.568"/>
        </Grid>
    </Grid>
</Page>
